{
	"name": "webpack-vue-boilerplate",
	"version": "1.0.3",
	"description": "Simple boilerplate for building Vue app with Webpack.",
	"main": "src/main.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development node_modules/.bin/webpack-dev-server --hot --open",
		"build": "cross-env NODE_ENV=production node_modules/.bin/webpack --hide-modules --progress"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oliverfindl/webpack-vue-boilerplate.git"
	},
	"keywords": [
		"webpack",
		"webpack-dev-server",
		"vue",
		"vue-router",
		"vuex",
		"sass",
		"node-sass",
		"boilerplate",
		"webpack-vue-boilerplate"
	],
	"author": "Oliver Findl",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/oliverfindl/webpack-vue-boilerplate/issues"
	},
	"homepage": "https://github.com/oliverfindl/webpack-vue-boilerplate#readme",
	"dependencies": {
		"vue": "^2.5.16"
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.4",
		"babel-preset-env": "^1.7.0",
		"babel-preset-minify": "^0.4.3",
		"babel-preset-stage-2": "^6.24.1",
		"clean-webpack-plugin": "^0.1.19",
		"cross-env": "^5.2.0",
		"css-loader": "^0.28.11",
		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"node-sass": "^4.9.0",
		"sass-loader": "^7.0.3",
		"vue-loader": "^15.2.4",
		"vue-style-loader": "^4.1.0",
		"vue-template-compiler": "^2.5.16",
		"webpack": "^4.12.0",
		"webpack-cli": "^3.0.7",
		"webpack-dev-server": "^3.1.4"
	}
